<div class="w-full max-w-3xl">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold"><%= @post.title %></h1>
    <div class="space-x-2">
      <%= link_to "Edit", edit_post_path(@post), class: "rounded-lg bg-blue-600 px-4 py-2 text-white hover:bg-blue-700" %>
      <%= link_to "Back", posts_path, class: "rounded-lg bg-gray-200 px-4 py-2 hover:bg-gray-300" %>
    </div>
  </div>

  <dl class="space-y-4">
    <div>
      <dt class="text-sm font-medium text-gray-500">Category</dt>
      <dd class="mt-1 text-gray-900"><%= @post.category.humanize %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Status</dt>
      <dd class="mt-1 text-gray-900"><%= @post.status.humanize %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Skill Level</dt>
      <dd class="mt-1 text-gray-900"><%= @post.skill_level %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Hook</dt>
      <dd class="mt-1 text-gray-900"><%= @post.hook %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Content Summary</dt>
      <dd class="mt-1 text-gray-900 whitespace-pre-wrap"><%= @post.content_summary %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Senior Insight</dt>
      <dd class="mt-1 text-gray-900"><%= @post.senior_insight %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">CTA</dt>
      <dd class="mt-1 text-gray-900"><%= @post.cta %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Hashtags</dt>
      <dd class="mt-1 text-gray-900"><%= @post.hashtags.join(" ") %></dd>
    </div>
    <% if @post.body.present? %>
      <div>
        <dt class="text-sm font-medium text-gray-500">Body</dt>
        <dd class="mt-1 text-gray-900 whitespace-pre-wrap"><%= @post.body %></dd>
      </div>
    <% end %>
  </dl>
</div>
