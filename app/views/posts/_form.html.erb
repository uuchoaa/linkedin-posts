<%= form_with model: @post, class: "space-y-4" do |f| %>
  <% if @post.errors.any? %>
    <div class="rounded-lg bg-red-50 p-4 text-red-700">
      <h2 class="font-medium"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul class="mt-2 list-disc list-inside">
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, class: "w-full rounded border border-gray-300 px-3 py-2" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :category, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :category, Post.categories.keys.map { |k| [k.humanize, k] }, { include_blank: true }, class: "w-full rounded border border-gray-300 px-3 py-2" %>
    </div>
    <div>
      <%= f.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :status, Post.statuses.keys.map { |k| [k.humanize, k] }, {}, class: "w-full rounded border border-gray-300 px-3 py-2" %>
    </div>
  </div>

  <div>
    <%= f.label :skill_level, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :skill_level, class: "w-full rounded border border-gray-300 px-3 py-2" %>
  </div>

  <div>
    <%= f.label :hook, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :hook, rows: 3, class: "w-full rounded border border-gray-300 px-3 py-2" %>
  </div>

  <div>
    <%= f.label :content_summary, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :content_summary, rows: 5, class: "w-full rounded border border-gray-300 px-3 py-2" %>
  </div>

  <div>
    <%= f.label :senior_insight, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :senior_insight, rows: 3, class: "w-full rounded border border-gray-300 px-3 py-2" %>
  </div>

  <div>
    <%= f.label :cta, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :cta, rows: 2, class: "w-full rounded border border-gray-300 px-3 py-2" %>
  </div>

  <div>
    <%= f.label :hashtags, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :hashtags, value: @post.hashtags.join(" "), placeholder: "#tag1 #tag2", class: "w-full rounded border border-gray-300 px-3 py-2" %>
  </div>

  <div class="pt-4">
    <%= f.submit class: "rounded-lg bg-blue-600 px-4 py-2 text-white hover:bg-blue-700" %>
  </div>
<% end %>
